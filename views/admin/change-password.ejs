<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Change Password - 777 Heaven Records</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
            background: #1a1a24;
            color: #e4e4e7;
            min-height: 100vh;
        }

        /* Page Transition Animations */
        body {
            opacity: 1;
            transition: opacity 0.08s;
        }

        body.page-transitioning {
            opacity: 0;
        }

        .loading-overlay {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: #1a1a24;
            display: none;
            justify-content: center;
            align-items: center;
            z-index: 9999;
            opacity: 0;
            transition: opacity 0.08s;
        }

        .loading-overlay.active {
            display: flex;
            opacity: 1;
        }

        .loading-spinner {
            width: 40px;
            height: 40px;
            border: 3px solid #343444;
            border-top-color: #667eea;
            border-radius: 50%;
            animation: spin 0.6s linear infinite;
        }

        @keyframes spin {
            to { transform: rotate(360deg); }
        }

        .fade-in {
            animation: fadeIn 0.15s ease-in;
        }

        @keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }

        .header {
            background: #232332;
            padding: 1rem 1.5rem;
            border-bottom: 1px solid #343444;
            display: flex;
            justify-content: space-between;
            align-items: center;
            position: relative;
        }

        .header h1 {
            font-size: 1.1rem;
            font-weight: 600;
            color: #f4f4f5;
            letter-spacing: -0.02em;
        }

        .header-actions {
            display: flex;
            gap: 0.75rem;
            align-items: center;
        }

        .container {
            max-width: 700px;
            margin: 0 auto;
            padding: 2rem 1.5rem;
        }

        .breadcrumb {
            margin-bottom: 2rem;
            display: flex;
            gap: 0.5rem;
            align-items: center;
            color: #a1a1aa;
            font-size: 0.9rem;
        }

        .breadcrumb a {
            color: #667eea;
            text-decoration: none;
            transition: color 0.2s;
        }

        .breadcrumb a:hover {
            color: #764ba2;
        }

        .btn {
            padding: 0.65rem 1.25rem;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            font-weight: 500;
            font-size: 0.85rem;
            transition: all 0.2s;
            text-decoration: none;
            display: inline-block;
        }

        .btn-sm {
            padding: 0.5rem 0.9rem;
            font-size: 0.8rem;
        }

        .btn-primary {
            background: #667eea;
            color: white;
        }

        .btn-primary:hover {
            background: #5568d3;
        }

        .btn-secondary {
            background: #343444;
            color: #e4e4e7;
        }

        .btn-secondary:hover {
            background: #3f3f50;
        }

        .btn-danger {
            background: #ef4444;
            color: white;
        }

        .btn-danger:hover {
            background: #dc2626;
        }

        .card {
            background: #232332;
            border: 1px solid #343444;
            border-radius: 8px;
            padding: 2rem;
        }

        .card h2 {
            font-size: 1.25rem;
            margin-bottom: 0.5rem;
            color: #f4f4f5;
            font-weight: 600;
        }

        .card-description {
            color: #a1a1aa;
            font-size: 0.9rem;
            margin-bottom: 2rem;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-group label {
            display: block;
            margin-bottom: 0.5rem;
            color: #d4d4d8;
            font-weight: 500;
            font-size: 0.9rem;
        }

        .form-group input {
            width: 100%;
            padding: 0.75rem 1rem;
            background: #1a1a24;
            border: 1px solid #343444;
            border-radius: 6px;
            color: #e4e4e7;
            font-size: 0.95rem;
            transition: all 0.2s;
        }

        .form-group input:focus {
            outline: none;
            border-color: #667eea;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
        }

        .form-group input::placeholder {
            color: #71717a;
        }

        .error-message {
            background: rgba(239, 68, 68, 0.1);
            border: 1px solid rgba(239, 68, 68, 0.3);
            color: #ef4444;
            padding: 1rem 1.25rem;
            border-radius: 6px;
            margin-bottom: 1.5rem;
            font-weight: 500;
            font-size: 0.9rem;
        }

        .success-message {
            background: rgba(34, 197, 94, 0.1);
            border: 1px solid rgba(34, 197, 94, 0.3);
            color: #22c55e;
            padding: 1rem 1.25rem;
            border-radius: 6px;
            margin-bottom: 1.5rem;
            font-weight: 500;
            font-size: 0.9rem;
        }

        .password-requirements {
            background: #1a1a24;
            border: 1px solid #343444;
            border-radius: 6px;
            padding: 1rem 1.25rem;
            margin-top: 0.75rem;
            font-size: 0.85rem;
        }

        .password-requirements h4 {
            color: #667eea;
            margin-bottom: 0.75rem;
            font-size: 0.85rem;
            font-weight: 600;
        }

        .password-requirements ul {
            list-style: none;
            color: #a1a1aa;
        }

        .password-requirements li {
            padding: 0.35rem 0;
            padding-left: 1rem;
            position: relative;
        }

        .password-requirements li::before {
            content: "‚Ä¢";
            color: #667eea;
            position: absolute;
            left: 0;
        }

        .button-group {
            display: flex;
            gap: 0.75rem;
            margin-top: 2rem;
        }

        .button-group button,
        .button-group a {
            flex: 1;
            text-align: center;
        }

        .security-tip {
            background: #1a1a24;
            border: 1px solid #343444;
            border-radius: 6px;
            padding: 1.25rem;
            margin-top: 2rem;
            font-size: 0.85rem;
        }

        .security-tip h4 {
            color: #fbbf24;
            margin-bottom: 0.75rem;
            font-size: 0.85rem;
            font-weight: 600;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .security-tip ul {
            list-style: none;
            color: #a1a1aa;
        }

        .security-tip li {
            padding: 0.35rem 0;
            padding-left: 1rem;
            position: relative;
        }

        .security-tip li::before {
            content: "‚Ä¢";
            color: #fbbf24;
            position: absolute;
            left: 0;
        }

        @media (max-width: 768px) {
            .container {
                padding: 1.5rem 1rem;
            }

            .card {
                padding: 1.5rem;
            }

            .button-group {
                flex-direction: column;
            }

            .header-actions {
                gap: 0.5rem;
            }
        }
    </style>
</head>
<body>
    <!-- Loading Overlay -->
    <div class="loading-overlay" id="loadingOverlay">
        <div class="loading-spinner"></div>
    </div>

    <!-- Header -->
    <div class="header">
        <h1>üéµ Admin Dashboard - 777 Heaven Records</h1>
        <div class="header-actions">
            <a href="/admin/dashboard" class="btn btn-secondary btn-sm">Dashboard</a>
            <button onclick="handleLogout()" class="btn btn-danger btn-sm">Logout</button>
        </div>
    </div>

    <!-- Main Container -->
    <div class="container">
        <div class="breadcrumb">
            <a href="/admin/dashboard">Dashboard</a>
            <span>/</span>
            <span>Change Password</span>
        </div>

        <div class="card">
            <h2>üîí Change Password</h2>
            <p class="card-description">Update your account password to keep your account secure.</p>

            <% if (error) { %>
                <div class="error-message"><%= error %></div>
            <% } %>

            <% if (success) { %>
                <div class="success-message"><%= success %></div>
            <% } %>

            <form method="POST" action="/admin/change-password">
                <div class="form-group">
                    <label for="currentPassword">Current Password *</label>
                    <input 
                        type="password" 
                        id="currentPassword" 
                        name="currentPassword" 
                        required 
                        autofocus
                        autocomplete="current-password"
                        placeholder="Enter your current password"
                    >
                </div>

                <div class="form-group">
                    <label for="newPassword">New Password *</label>
                    <input 
                        type="password" 
                        id="newPassword" 
                        name="newPassword" 
                        required
                        minlength="8"
                        autocomplete="new-password"
                        placeholder="Enter your new password"
                    >
                    <div class="password-requirements">
                        <h4>Password Requirements</h4>
                        <ul>
                            <li>At least 8 characters long</li>
                            <li>Mix of uppercase and lowercase letters recommended</li>
                            <li>Include numbers and special characters recommended</li>
                            <li>Avoid common words or patterns</li>
                        </ul>
                    </div>
                </div>

                <div class="form-group">
                    <label for="confirmPassword">Confirm New Password *</label>
                    <input 
                        type="password" 
                        id="confirmPassword" 
                        name="confirmPassword" 
                        required
                        minlength="8"
                        autocomplete="new-password"
                        placeholder="Re-enter your new password"
                    >
                </div>

                <div class="button-group">
                    <a href="/admin/dashboard" class="btn btn-secondary">Cancel</a>
                    <button type="submit" class="btn btn-primary">Change Password</button>
                </div>
            </form>

            <div class="security-tip">
                <h4>üõ°Ô∏è Security Tips</h4>
                <ul>
                    <li>Use a unique password not used on other sites</li>
                    <li>Consider using a password manager</li>
                    <li>Change your password regularly</li>
                    <li>Never share your password with anyone</li>
                </ul>
            </div>
        </div>
    </div>

    <script>
        // Add fade-in animation on page load
        document.addEventListener('DOMContentLoaded', function() {
            document.body.classList.add('fade-in');

            const loadingOverlay = document.getElementById('loadingOverlay');

            // Smooth page transitions
            function addSmoothTransition(element, callback) {
                element.addEventListener('click', function(e) {
                    e.preventDefault();
                    
                    loadingOverlay.classList.add('active');
                    document.body.classList.add('page-transitioning');
                    
                    setTimeout(function() {
                        if (callback) {
                            callback();
                        } else {
                            window.location.href = element.href;
                        }
                    }, 80);
                });
            }

            // Add smooth transitions to all links
            document.querySelectorAll('a.btn').forEach(function(link) {
                addSmoothTransition(link);
            });

            document.querySelectorAll('.breadcrumb a').forEach(function(link) {
                addSmoothTransition(link);
            });

            // Handle form submission
            document.querySelector('form').addEventListener('submit', function(e) {
                loadingOverlay.classList.add('active');
                document.body.classList.add('page-transitioning');
            });
        });

        function handleLogout() {
            document.getElementById('loadingOverlay').classList.add('active');
            document.body.classList.add('page-transitioning');
            setTimeout(function() {
                window.location.href = '/admin/logout';
            }, 80);
        }

        // Password confirmation validation
        const newPassword = document.getElementById('newPassword');
        const confirmPassword = document.getElementById('confirmPassword');

        function validatePassword() {
            if (newPassword.value !== confirmPassword.value) {
                confirmPassword.setCustomValidity('Passwords do not match');
            } else {
                confirmPassword.setCustomValidity('');
            }
        }

        newPassword.addEventListener('change', validatePassword);
        confirmPassword.addEventListener('keyup', validatePassword);
    </script>
</body>
</html>
