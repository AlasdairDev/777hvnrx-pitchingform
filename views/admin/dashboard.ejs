<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard - 777 Heaven Records</title>
    <link rel="stylesheet" href="/admin.css">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
            background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
            color: #e4e4e7;
            min-height: 100vh;
        }

        .header {
            background: rgba(255, 255, 255, 0.05);
            backdrop-filter: blur(10px);
            padding: 1rem 2rem;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            display: flex;
            justify-content: space-between;
            align-items: center;
            position: relative;
        }

        .header h1 {
            font-size: 1.25rem;
            font-weight: 700;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            background-clip: text;
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        /* Burger Menu */
        .burger-menu {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .user-display {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            font-size: 0.875rem;
        }

        .user-icon {
            width: 32px;
            height: 32px;
            border-radius: 50%;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 700;
            font-size: 0.875rem;
        }

        .user-name {
            display: flex;
            flex-direction: column;
            gap: 0.125rem;
        }

        .user-name span:first-child {
            font-weight: 600;
        }

        .user-name span:last-child {
            font-size: 0.75rem;
            color: #a1a1aa;
            text-transform: uppercase;
        }

        .burger-btn {
            background: none;
            border: none;
            cursor: pointer;
            padding: 0.5rem;
            display: flex;
            flex-direction: column;
            gap: 4px;
            transition: all 0.3s;
        }

        .burger-btn:hover {
            opacity: 0.8;
        }

        .burger-btn span {
            width: 24px;
            height: 2px;
            background: #e4e4e7;
            border-radius: 2px;
            transition: all 0.3s;
        }

        .burger-btn.active span:nth-child(1) {
            transform: rotate(45deg) translate(6px, 6px);
        }

        .burger-btn.active span:nth-child(2) {
            opacity: 0;
        }

        .burger-btn.active span:nth-child(3) {
            transform: rotate(-45deg) translate(6px, -6px);
        }

        /* Dropdown Menu */
        .dropdown-menu {
            position: absolute;
            top: 100%;
            right: 2rem;
            margin-top: 0.5rem;
            background: rgba(26, 26, 46, 0.98);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 12px;
            padding: 0.5rem;
            min-width: 200px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.5);
            opacity: 0;
            visibility: hidden;
            transform: translateY(-10px);
            transition: all 0.3s;
            z-index: 1000;
        }

        .dropdown-menu.active {
            opacity: 1;
            visibility: visible;
            transform: translateY(0);
        }

        .dropdown-menu a,
        .dropdown-menu button {
            display: block;
            width: 100%;
            padding: 0.75rem 1rem;
            background: none;
            border: none;
            color: #e4e4e7;
            text-decoration: none;
            border-radius: 8px;
            cursor: pointer;
            transition: all 0.2s;
            text-align: left;
            font-size: 0.9rem;
        }

        .dropdown-menu a:hover,
        .dropdown-menu button:hover {
            background: rgba(102, 126, 234, 0.1);
            color: #667eea;
        }

        .dropdown-menu .logout-btn {
            color: #ef4444;
            border-top: 1px solid rgba(255, 255, 255, 0.1);
            margin-top: 0.5rem;
            padding-top: 1rem;
        }

        .dropdown-menu .logout-btn:hover {
            background: rgba(239, 68, 68, 0.1);
        }

        @media (max-width: 768px) {
            .header h1 {
                font-size: 1rem;
            }
            
            .user-name span:first-child {
                display: none;
            }
        }

        .btn {
            padding: 0.5rem 1rem;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-weight: 600;
            transition: all 0.3s;
            text-decoration: none;
            display: inline-block;
        }

        .btn-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(102, 126, 234, 0.3);
        }

        .btn-secondary {
            background: rgba(255, 255, 255, 0.1);
            color: #e4e4e7;
        }

        .btn-danger {
            background: rgba(239, 68, 68, 0.8);
            color: white;
        }

        .btn-success {
            background: rgba(34, 197, 94, 0.8);
            color: white;
        }

        .container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 2rem;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 1.5rem;
            margin-bottom: 2rem;
        }

        .stat-card {
            background: rgba(255, 255, 255, 0.05);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 16px;
            padding: 1.5rem;
            transition: all 0.3s;
        }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.3);
            border-color: rgba(102, 126, 234, 0.5);
        }

        .stat-number {
            font-size: 2.5rem;
            font-weight: 700;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            background-clip: text;
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .stat-label {
            font-size: 0.9rem;
            color: #a1a1aa;
            margin-top: 0.5rem;
        }

        .tabs {
            display: flex;
            gap: 1rem;
            margin-bottom: 2rem;
            border-bottom: 2px solid rgba(255, 255, 255, 0.1);
            padding-bottom: 0;
        }

        .tab {
            padding: 1rem 1.5rem;
            background: none;
            border: none;
            color: #a1a1aa;
            cursor: pointer;
            font-weight: 600;
            transition: all 0.3s;
            position: relative;
            text-decoration: none;
        }

        .tab.active {
            color: #667eea;
        }

        .tab.active::after {
            content: '';
            position: absolute;
            bottom: -2px;
            left: 0;
            right: 0;
            height: 2px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }

        .toolbar {
            background: rgba(255, 255, 255, 0.05);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 12px;
            padding: 1.5rem;
            margin-bottom: 2rem;
        }

        .search-bar {
            display: flex;
            gap: 1rem;
            margin-bottom: 1rem;
            flex-wrap: wrap;
        }

        .search-input {
            flex: 1;
            min-width: 250px;
            padding: 0.75rem 1rem;
            background: rgba(255, 255, 255, 0.05);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 8px;
            color: #e4e4e7;
        }

        .search-input:focus {
            outline: none;
            border-color: #667eea;
        }

        select {
            padding: 0.75rem 1rem;
            background: rgba(255, 255, 255, 0.05);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 8px;
            color: #e4e4e7;
            cursor: pointer;
        }

        .bulk-actions {
            display: flex;
            gap: 1rem;
            align-items: center;
        }

        .table-container {
            background: rgba(255, 255, 255, 0.05);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 16px;
            overflow: hidden;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        thead {
            background: rgba(255, 255, 255, 0.05);
        }

        th {
            padding: 1rem;
            text-align: left;
            font-weight: 600;
            color: #a1a1aa;
            text-transform: uppercase;
            font-size: 0.75rem;
            letter-spacing: 0.05em;
        }

        td {
            padding: 1rem;
            border-top: 1px solid rgba(255, 255, 255, 0.05);
        }

        tbody tr {
            transition: all 0.3s;
        }

        tbody tr:hover {
            background: rgba(102, 126, 234, 0.1);
        }

        .badge {
            padding: 0.25rem 0.75rem;
            border-radius: 20px;
            font-size: 0.75rem;
            font-weight: 600;
            display: inline-block;
        }

        .badge-pending { background: rgba(251, 191, 36, 0.2); color: #fbbf24; }
        .badge-reviewed { background: rgba(59, 130, 246, 0.2); color: #3b82f6; }
        .badge-approved { background: rgba(34, 197, 94, 0.2); color: #22c55e; }
        .badge-rejected { background: rgba(239, 68, 68, 0.2); color: #ef4444; }

        .actions {
            display: flex;
            gap: 0.5rem;
        }

        .btn-sm {
            padding: 0.4rem 0.8rem;
            font-size: 0.85rem;
        }

        .message {
            padding: 1rem 1.5rem;
            border-radius: 12px;
            margin-bottom: 1.5rem;
            font-weight: 500;
        }

        .message-success {
            background: rgba(34, 197, 94, 0.1);
            border: 1px solid rgba(34, 197, 94, 0.3);
            color: #22c55e;
        }

        .message-error {
            background: rgba(239, 68, 68, 0.1);
            border: 1px solid rgba(239, 68, 68, 0.3);
            color: #ef4444;
        }

        .empty-state {
            text-align: center;
            padding: 4rem 2rem;
            color: #a1a1aa;
        }

        .empty-state h3 {
            font-size: 1.5rem;
            margin-bottom: 0.5rem;
        }

        @media (max-width: 768px) {
            .header {
                flex-direction: column;
                gap: 1rem;
            }

            .stats-grid {
                grid-template-columns: 1fr;
            }

            .table-container {
                overflow-x: auto;
            }
        }
    </style>
</head>
<body>
    <div class="header">
        <h1>ðŸŽµ 777 Heaven Records</h1>
        <div class="burger-menu">
            <div class="user-display">
                <div class="user-icon"><%= admin.username.charAt(0).toUpperCase() %></div>
                <div class="user-name">
                    <span><%= admin.username %></span>
                    <span><%= admin.role.replace('_', ' ') %></span>
                </div>
            </div>
            <button class="burger-btn" onclick="toggleMenu()" id="burgerBtn">
                <span></span>
                <span></span>
                <span></span>
            </button>
        </div>
        <div class="dropdown-menu" id="dropdownMenu">
            <a href="/admin/change-password">ðŸ”‘ Change Password</a>
            <% if (admin.role === 'super_admin') { %>
                <a href="/admin/admins">ðŸ‘¥ Manage Admins</a>
            <% } %>
            <a href="/admin/logout" class="logout-btn">ðŸšª Logout</a>
        </div>
    </div>

    <div class="container">
        <% if (locals.message) { %>
            <div class="message message-<%= message.type %>">
                <%= message.text %>
            </div>
        <% } %>

        <!-- Stats Dashboard -->
        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-number"><%= stats.total %></div>
                <div class="stat-label">Total Submissions</div>
            </div>
            <div class="stat-card">
                <div class="stat-number"><%= stats.active %></div>
                <div class="stat-label">Active</div>
            </div>
            <div class="stat-card">
                <div class="stat-number"><%= stats.archived %></div>
                <div class="stat-label">Archived</div>
            </div>
            <div class="stat-card">
                <div class="stat-number"><%= stats.deleted %></div>
                <div class="stat-label">Trash</div>
            </div>
        </div>

        <!-- Tabs -->
        <div class="tabs">
            <a href="/admin/dashboard?view=active" class="tab <%= currentView === 'active' ? 'active' : '' %>">
                Active (<%= stats.active %>)
            </a>
            <a href="/admin/dashboard?view=archived" class="tab <%= currentView === 'archived' ? 'active' : '' %>">
                Archived (<%= stats.archived %>)
            </a>
            <a href="/admin/dashboard?view=deleted" class="tab <%= currentView === 'deleted' ? 'active' : '' %>">
                Trash (<%= stats.deleted %>)
            </a>
            <a href="/admin/dashboard?view=all" class="tab <%= currentView === 'all' ? 'active' : '' %>">
                All (<%= stats.total %>)
            </a>
            <a href="/admin/audit-logs" class="tab">
                ðŸ“‹ Audit Logs
            </a>
        </div>

        <!-- Toolbar -->
        <div class="toolbar">
            <form method="GET" action="/admin/dashboard" class="search-bar">
                <input type="hidden" name="view" value="<%= currentView %>">
                <input 
                    type="text" 
                    name="search" 
                    placeholder="Search by artist, song, email..." 
                    class="search-input"
                    value="<%= search %>"
                >
                <select name="genre">
                    <option value="">All Genres</option>
                    <option value="Indie Rock" <%= filterGenre === 'Indie Rock' ? 'selected' : '' %>>Indie Rock</option>
                    <option value="Dream Pop" <%= filterGenre === 'Dream Pop' ? 'selected' : '' %>>Dream Pop</option>
                    <option value="Lo-Fi" <%= filterGenre === 'Lo-Fi' ? 'selected' : '' %>>Lo-Fi</option>
                    <option value="Folk" <%= filterGenre === 'Folk' ? 'selected' : '' %>>Folk</option>
                    <option value="Electronic" <%= filterGenre === 'Electronic' ? 'selected' : '' %>>Electronic</option>
                </select>
                <select name="status">
                    <option value="">All Status</option>
                    <option value="pending" <%= filterStatus === 'pending' ? 'selected' : '' %>>Pending</option>
                    <option value="reviewed" <%= filterStatus === 'reviewed' ? 'selected' : '' %>>Reviewed</option>
                    <option value="approved" <%= filterStatus === 'approved' ? 'selected' : '' %>>Approved</option>
                    <option value="rejected" <%= filterStatus === 'rejected' ? 'selected' : '' %>>Rejected</option>
                </select>
                <button type="submit" class="btn btn-primary">Search</button>
            </form>

            <div class="bulk-actions">
                <button onclick="selectAll()" class="btn btn-secondary btn-sm">Select All</button>
                <button onclick="deselectAll()" class="btn btn-secondary btn-sm">Deselect All</button>
                <% if (currentView !== 'archived' && currentView !== 'deleted') { %>
                    <button onclick="bulkArchive()" class="btn btn-secondary btn-sm">Archive Selected</button>
                    <button onclick="bulkDelete()" class="btn btn-danger btn-sm">Delete Selected</button>
                <% } %>
                <a href="/admin/export?view=<%= currentView %>&format=json" class="btn btn-primary btn-sm">Export JSON</a>
                <a href="/admin/export?view=<%= currentView %>&format=csv" class="btn btn-primary btn-sm">Export CSV</a>
            </div>
        </div>

        <!-- Submissions Table -->
        <div class="table-container">
            <% if (submissions.length === 0) { %>
                <div class="empty-state">
                    <h3>No submissions found</h3>
                    <p>There are no submissions in this view.</p>
                </div>
            <% } else { %>
                <form id="bulkForm" method="POST" action="/admin/bulk-action">
                    <input type="hidden" name="action" id="bulkAction" value="">
                    <table>
                        <thead>
                            <tr>
                                <th width="40"><input type="checkbox" id="selectAllCheckbox" onclick="toggleSelectAll()"></th>
                                <th>Artist</th>
                                <th>Song</th>
                                <th>Genre</th>
                                <th>Status</th>
                                <th>Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% submissions.forEach(submission => { %>
                                <tr>
                                    <td>
                                        <input type="checkbox" name="submissionIds[]" value="<%= submission.id %>" class="submission-checkbox">
                                    </td>
                                    <td><strong><%= submission.artistName %></strong></td>
                                    <td><%= submission.songTitle %></td>
                                    <td><%= submission.genre %></td>
                                    <td>
                                        <span class="badge badge-<%= submission.status || 'pending' %>">
                                            <%= (submission.status || 'pending').toUpperCase() %>
                                        </span>
                                    </td>
                                    <td><%= new Date(submission.timestamp).toLocaleDateString() %></td>
                                    <td>
                                        <div class="actions">
                                            <a href="/admin/submission/<%= submission.id %>" class="btn btn-primary btn-sm">View</a>
                                            
                                            <% if (currentView === 'deleted') { %>
                                                <form method="POST" action="/admin/submission/<%= submission.id %>/restore" style="display: inline;">
                                                    <button type="submit" class="btn btn-success btn-sm">Restore</button>
                                                </form>
                                                <form method="POST" action="/admin/submission/<%= submission.id %>/permanent-delete" style="display: inline;" onsubmit="return confirm('Permanently delete? This cannot be undone!');">
                                                    <button type="submit" class="btn btn-danger btn-sm">Delete Forever</button>
                                                </form>
                                            <% } else if (submission.archived) { %>
                                                <form method="POST" action="/admin/submission/<%= submission.id %>/unarchive" style="display: inline;">
                                                    <button type="submit" class="btn btn-success btn-sm">Unarchive</button>
                                                </form>
                                            <% } else { %>
                                                <form method="POST" action="/admin/submission/<%= submission.id %>/archive" style="display: inline;">
                                                    <button type="submit" class="btn btn-secondary btn-sm">Archive</button>
                                                </form>
                                                <form method="POST" action="/admin/submission/<%= submission.id %>/delete" style="display: inline;">
                                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                                </form>
                                            <% } %>
                                        </div>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </form>
            <% } %>
        </div>
    </div>

    <script>
        function toggleMenu() {
            const burgerBtn = document.getElementById('burgerBtn');
            const dropdownMenu = document.getElementById('dropdownMenu');
            burgerBtn.classList.toggle('active');
            dropdownMenu.classList.toggle('active');
        }

        // Close menu when clicking outside
        document.addEventListener('click', function(event) {
            const burgerMenu = document.querySelector('.burger-menu');
            const dropdownMenu = document.getElementById('dropdownMenu');
            
            if (!burgerMenu.contains(event.target) && !dropdownMenu.contains(event.target)) {
                document.getElementById('burgerBtn').classList.remove('active');
                dropdownMenu.classList.remove('active');
            }
        });

        function toggleSelectAll() {
            const selectAllCheckbox = document.getElementById('selectAllCheckbox');
            const checkboxes = document.querySelectorAll('.submission-checkbox');
            checkboxes.forEach(cb => cb.checked = selectAllCheckbox.checked);
        }

        function selectAll() {
            document.querySelectorAll('.submission-checkbox').forEach(cb => cb.checked = true);
            document.getElementById('selectAllCheckbox').checked = true;
        }

        function deselectAll() {
            document.querySelectorAll('.submission-checkbox').forEach(cb => cb.checked = false);
            document.getElementById('selectAllCheckbox').checked = false;
        }

        function bulkArchive() {
            if (confirm('Archive selected submissions?')) {
                document.getElementById('bulkAction').value = 'archive';
                document.getElementById('bulkForm').submit();
            }
        }

        function bulkDelete() {
            if (confirm('Move selected submissions to trash?')) {
                document.getElementById('bulkAction').value = 'delete';
                document.getElementById('bulkForm').submit();
            }
        }
    </script>
</body>
</html>
