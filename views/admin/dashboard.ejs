<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - 777heaven Records Admin</title>
    <link rel="stylesheet" href="/css/admin.css">
</head>
<body>
    <div class="admin-container">
        <header class="admin-header">
            <div class="header-content">
                <h1>777heaven Records - Admin Dashboard</h1>
                <div class="header-actions">
                    <span>Welcome, <%= username %></span>
                    <a href="/admin/export" class="btn-export">Export All Data</a>
                    <a href="/admin/logout" class="btn-logout">Logout</a>
                </div>
            </div>
        </header>

        <div class="dashboard-content">
            <!-- Statistics -->
            <div class="stats-grid">
                <div class="stat-card">
                    <h3>Total Submissions</h3>
                    <div class="stat-number"><%= stats.total %></div>
                </div>
                
                <div class="stat-card">
                    <h3>By Format</h3>
                    <div class="stat-list">
                        <% Object.entries(stats.byFormat).forEach(([format, count]) => { %>
                            <div><span><%= format %>:</span> <strong><%= count %></strong></div>
                        <% }); %>
                    </div>
                </div>
                
                <div class="stat-card">
                    <h3>Top Genres</h3>
                    <div class="stat-list">
                        <% Object.entries(stats.byGenre).slice(0, 5).forEach(([genre, count]) => { %>
                            <div><span><%= genre %>:</span> <strong><%= count %></strong></div>
                        <% }); %>
                    </div>
                </div>
                
                <div class="stat-card">
                    <h3>Top Vibes</h3>
                    <div class="stat-list">
                        <% Object.entries(stats.byVibe).slice(0, 5).forEach(([vibe, count]) => { %>
                            <div><span><%= vibe %>:</span> <strong><%= count %></strong></div>
                        <% }); %>
                    </div>
                </div>
            </div>

            <!-- Submissions Table -->
            <div class="submissions-section">
                <h2>All Submissions (<%= submissions.length %>)</h2>
                
                <% if (submissions.length === 0) { %>
                    <p class="no-data">No submissions yet.</p>
                <% } else { %>
                    <table class="submissions-table">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Artist</th>
                                <th>Product Title</th>
                                <th>Format</th>
                                <th>Genre</th>
                                <th>Release Date</th>
                                <th>Compilations</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% submissions.reverse().forEach(sub => { %>
                                <tr>
                                    <td><%= new Date(sub.timestamp).toLocaleDateString() %></td>
                                    <td><%= sub.primaryArtist %></td>
                                    <td><%= sub.productTitle %></td>
                                    <td><span class="badge"><%= sub.format %></span></td>
                                    <td><%= sub.genre %></td>
                                    <td><%= new Date(sub.releaseDate).toLocaleDateString() %></td>
                                    <td>
                                        <span class="compilation-count"><%= sub.compilations.length %> playlists</span>
                                    </td>
                                    <td class="actions">
                                        <a href="/admin/submission/<%= sub.id %>" class="btn-view">View</a>
                                        <form action="/admin/submission/<%= sub.id %>/delete" method="POST" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this submission?');">
                                            <button type="submit" class="btn-delete">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                <% } %>
            </div>
        </div>
    </div>
</body>
</html>
